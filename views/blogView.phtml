<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mi Blog</title>

</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Mi Blog</h1>
            <div class="user-info">
                <?php if (isset($_SESSION['user']) && is_object($_SESSION['user'])): ?>
                    <span>Hola, <?php echo $_SESSION['user']->getUsername(); ?></span>
                    <a href="index.php?c=post&action=create" class="logout-btn" style="background-color: #27ae60;">Nueva Publicación</a>
                    <a href="index.php?c=user&logout=1" class="logout-btn">Salir</a>
                <?php else: ?>
                    <a href="index.php?c=user" class="logout-btn" style="background-color: #27ae60;">Iniciar Sesión</a>
                <?php endif; ?>
            </div>
        </div>

        <div class="posts-section">
            <h2>Publicaciones</h2>
            <?php 
            if (!isset($posts)) {
                $posts = [];
            }
            ?>
            <?php if (count($posts) > 0): ?>
                <?php foreach ($posts as $post): ?>
                    <div class="post">
                        <div class="post-header">
                            <div>
                                <h3 class="post-title"><?php echo htmlspecialchars($post->getTitle()); ?></h3>
                                <div class="post-meta">
                                    Por <strong><?php echo htmlspecialchars($post->getAuthor()); ?></strong> 
                                    el <?php echo date('d/m/Y H:i', strtotime($post->getCreatedAt())); ?>
                                </div>
                            </div>
                            <?php if (isset($_SESSION['user']) && is_object($_SESSION['user']) && $post->getUserId() == $_SESSION['user']->getId()): ?>
                                <a href="index.php?delete=<?php echo $post->getId(); ?>" 
                                   class="delete-btn" 
                                   onclick="return confirm('¿Estás seguro de eliminar esta publicación?')">
                                   Eliminar
                                </a>
                            <?php endif; ?>
                        </div>
                        <div class="post-text">
                            <?php echo nl2br(htmlspecialchars($post->getText())); ?>
                        </div>
                    </div>
                <?php endforeach; ?>
            <?php else: ?>
                <div class="no-posts">
                    <?php if (isset($_SESSION['user']) && is_object($_SESSION['user'])): ?>
                        <p>No hay publicaciones aún. ¡Sé el primero en publicar!</p>
                    <?php else: ?>
                        <p>No hay publicaciones aún. <a href="index.php?c=user">Inicia sesión</a> para crear la primera publicación.</p>
                    <?php endif; ?>
                </div>
            <?php endif; ?>
        </div>
    </div>
</body>
</html>
